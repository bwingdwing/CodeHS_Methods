public boolean allSameLetter(String str)
{
        if(str.length() == 0)
            return true;
           
        char firstChar = str.charAt(0);
        for( int i=0; i<str.length(); i++ )
        {
            char curChar = str.charAt(i);
           
            if(firstChar != curChar)
            {
                return false;
            }
        }
       
        return true;
 
}
